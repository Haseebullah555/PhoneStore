@section Script {
    <script>
        var dtTable;
        var i = 1;
        var shouldCallFunction = true;
        $(function () {
            dtTable = $("#dtTable").DataTable({
                language: {
                    paginate: {
                        next: '<i class="fa fa-angle-double-right" aria-hidden="true"></i>',
                        previous: '<i class="fa fa-angle-double-left" aria-hidden="true"></i>'
                    }
                },
                "processing": true,
                // "serverSide": true,
                "orderMulti": false,
                //"filter": true,
                "ajax": {
                    "url": "SupplierLoans/GetSupplierLoans",
                    "type": "GET",
                    "datatype": "json"
                },
                "emptyrecords": 'No records to display',
                //"dom": '<"top"f>frtip<"bottom"l><"clear">',
                "lengthMenu": [[10, 25, 50, 100, 150, 200], [10, 25, 50, 100, 150, 200]],
                "aoColumns": [
                    { "data": "supplierName" },
                    { "data": "unpaidAmount" },
                    {
                        targets: -1,
                        data: null,
                        orderable: false,
                        className: 'text-end',
                        "mRender": function (data, type, row) {
                            return `<a href="#" class="btn btn-primary shadow btn-xs sharp mr-1" onclick="loadSupplierLoan(${row.id})" data-toggle="modal" data-target="#EditSupplierLoanModal"><i class="fa fa-pencil"></i></a>`;
                        }
                    }
                ]
            });
            $('.search-input').on('keyup change', function () {
                var index = $(this).attr('data'),

                    val = $(this).val();
                dtTable.search(val.trim()).draw();
            });
        });
        $('#EditSupplierLoanFrm').on('submit', function (e) {
            e.preventDefault();
            var formData = new FormData(this);
            $.ajax({
                url: "SupplierLoan/EditSupplierLoan",
                type: $(this).attr('method'),
                data: $(this).serialize(),
                dataType: "json",
                success: function (response) {
                    if (response.data) {
                        $('#EditSupplierLoanModal').modal('hide');
                        $("#dtTable").DataTable().ajax.reload();
                        $('#EditSupplierLoanFrm').trigger("reset");
                        notification("@Html.Raw(L["success"])", "@Html.Raw(L["Supplier Loan updated successfully"])", "success");
                    }
                    else {
                        notification("@Html.Raw(L["failed"])", "@Html.Raw(L["Supplier Loan is Already Exist"])", "warning");
                        $("#IDCard").focus();
                    }
                },
                error: function (xhr, status, error) {
                    notification("@Html.Raw(L["error"])", "@Html.Raw(L["An Error Has beed Occured Pleas Try Again"])", "error");
                }
            });
        });
        $("#ProvinceId").change(function () {
            fillDropdownByParentId(this, "#DirectoryId", "/General/GetDirectories");
        });
        $("#EditSupplierLoanFrm #ProvinceId").change(function () {
            //shouldCallFunction = true;
            if (shouldCallFunction) {
                fillDropdownByParentId(this, "#EditSupplierLoanFrm #DirectoryId", "/General/GetDirectories");
            }
        });

        function loadSupplierLoan(id) {
            $.ajax({
                url: "/PhoneStore/SupplierLoan/GetSupplierLoan",
                type: "Get",
                data: { id: id },
                dataType: "json",
                success: function (response) {
                    for (var propName in response.data) {
                        if (response.data.hasOwnProperty(propName)) {
                            var Prop = propName.replace(/^"(.*)"$/, '$1');
                            var Value = response.data[Prop];
                            var Capital = propName.charAt(0).toUpperCase() + propName.slice(1);
                            if (propName === "provinceId") {
                                shouldCallFunction = false;
                                $('#EditSupplierLoanFrm #ProvinceId').val(Value).trigger('change');
                                shouldCallFunction = true;
                            }
                            $('#EditSupplierLoanFrm input[id="' + Capital + '"]').val(Value);
                        }
                    }
                }
            });
        }

        $('#frmAddSupplierPayment').on('submit', function (e) {
            e.preventDefault();
            var formData = new FormData(this);
            $.ajax({
                url: "/PhoneStore/SuppliersPayment/AddSupplierPayment",
                type: $(this).attr('method'),
                data: $(this).serialize(),
                dataType: "json",
                success: function (response) {
                    if (response.data) {
                        $('#addSupplierPaymentModal').modal('hide');
                        $("#dtTable").DataTable().ajax.reload();
                        $('#frmAddSupplierPayment').trigger("reset");
                        notification("@Html.Raw(L["success"])", "@Html.Raw(L["Supplier Payment has been added successfully"])", "success");
                    }
                    else {
                        notification("@Html.Raw(L["failed"])", "@Html.Raw(L["Supplier Payment is Already Exist"])", "warning");
                    }

                },
                error: function (xhr, status, error) {
                    notification("@Html.Raw(L["error"])", "@Html.Raw(L["An Error Has beed Occured Pleas Try Again"])", "error");
                }
            });
        });
        function addPayment(SupplierId, id) {
            console.log(SupplierId);
            console.log(id);

            $("#SupplierId").val(SupplierId);
            $("#id").val(id);
        }
    </script>
}