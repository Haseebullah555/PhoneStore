@inject PhoneStore.Web.Resources.LocService L
@model PhoneStore.Application.Dtos.GoodsDto
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h4 class="card-title">@L["Goods List"]</h4>
                <div class="d-flex justify-content-end">
                    <!--begin::Add user-->
                    <button type="button" class="btn btn-primary mb-2" data-toggle="modal" data-target="#addGoodModal">
                        <span class="fa fa-plus"></span>
                    </button>
                    <!--end::Add user-->
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="dtTable" class="display" style="min-width: 845px; width: 100%;">
                        <thead>
                            <tr>
                                <th>@L["Good Name"]</th>
                                <th>@L["Company Name"]</th>
                                <th>@L["Action"]</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@* Add Good Modal *@
<div id="addGoodModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@L["Add Good"]</h5>
                <button type="button" class="btn btn-danger light" data-dismiss="modal"> <span>&times;</span></button>
            </div>
            <div class="modal-body">
                <form id="frmAddGood" method="post">
                    <div class="modal-body py-lg-10 px-lg-10">
                        <div class="form-group row mb-2">
                            <div class="col-md-6 mb-2">
                                <label asp-for="GoodName" class="required form-label"></label>
                                <input asp-for="GoodName" class="form-control" />
                                <span asp-validation-for="GoodName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-2">
                                <label asp-for="CompanyId" class="required form-label"></label>
                                <select asp-for="CompanyId" asp-items="@ViewBag.Company"
                                    class="form-select form-control" data-placeholder="@L["Select an option"]" required>
                                    <option></option>
                                </select>
                                <span asp-validation-for="CompanyId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger light" data-dismiss="modal">@L["Close"]</button>
                        <button type="submit" class="btn btn-primary">@L["Save Changes"]</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@* Edit Good Model *@
<div id="EditGoodModal" class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@L["Update Good"]</h5>
                <button type="button" class="btn btn-danger light" data-dismiss="modal"> <span>&times;</span></button>

            </div>
            <div class="modal-body">
                <form id="EditGoodFrm" method="post">
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="CreatedDate" />
                    <input type="hidden" asp-for="CreatedBy" />
                    <div class="modal-body py-lg-10 px-lg-10">
                        <div class="form-group row mb-2">
                            <div class="col-md-6 mb-2">
                                <label asp-for="GoodName" class="required form-label"></label>
                                <input asp-for="GoodName" class="form-control" />
                                <span asp-validation-for="GoodName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-2">
                                <label asp-for="CompanyId" class="required form-label"></label>
                                <select asp-for="CompanyId" asp-items="@ViewBag.Company"
                                        class="form-select form-control" data-placeholder="@L["Select an option"]" required>
                                    <option></option>
                                </select>
                                <span asp-validation-for="CompanyId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger light" data-dismiss="modal">@L["Close"]</button>
                        <button type="submit" class="btn btn-primary">@L["Update"]</button>
                    </div>
                </form>
            </div>
            <!--end::Modal content-->
        </div>
        <!--end::Modal dialog-->
    </div>
</div>

@section Script {
    <script>
        var dtTable;
        var i = 1;
        var shouldCallFunction = true;
        $(function () {
            dtTable = $("#dtTable").DataTable({
                language: {
                    paginate: {
                        next: '<i class="fa fa-angle-double-right" aria-hidden="true"></i>',
                        previous: '<i class="fa fa-angle-double-left" aria-hidden="true"></i>'
                    }
                },
                "processing": true,
                // "serverSide": true,
                "orderMulti": false,
                //"filter": true,
                "ajax": {
                    "url": "Goods/GetGoods",
                    "type": "GET",
                    "datatype": "json"
                },
                "emptyrecords": 'No records to display',
                //"dom": '<"top"f>frtip<"bottom"l><"clear">',
                "lengthMenu": [[10, 25, 50, 100, 150, 200], [10, 25, 50, 100, 150, 200]],
                "aoColumns": [
                    { "data": "goodName" },
                    { "data": "company" },
                    {
                        targets: -1,
                        data: null,
                        orderable: false,
                        className: 'text-end',
                        "mRender": function (data, type, row) {
                            return `<a href="#" class="btn btn-primary shadow btn-xs sharp mr-1" onclick="loadGood(${row.id})" data-toggle="modal" data-target="#EditGoodModal"><i class="fa fa-pencil"></i></a>`;
                        }
                    }
                ]
            });
            $('.search-input').on('keyup change', function () {
                var index = $(this).attr('data'),

                    val = $(this).val();
                dtTable.search(val.trim()).draw();
            });
        });
        $('#frmAddGood').on('submit', function (e) {
            e.preventDefault();
            var formData = new FormData(this);
            $.ajax({
                url: "Goods/AddGood",
                type: $(this).attr('method'),
                data: $(this).serialize(),
                dataType: "json",
                success: function (response) {
                    if (response.data) {
                        $('#addGoodModal').modal('hide');
                        $("#dtTable").DataTable().ajax.reload();
                        $('#frmAddGood').trigger("reset");
                        notification("@Html.Raw(L["success"])", "@Html.Raw(L["Good has been added successfully"])", "success");
                    }
                    else {
                        notification("@Html.Raw(L["failed"])", "@Html.Raw(L["Good is Already Exist"])", "warning");
                    }

                },
                error: function (xhr, status, error) {
                    notification("@Html.Raw(L["error"])", "@Html.Raw(L["An Error Has beed Occured Pleas Try Again"])", "error");
                }
            });
        });
        $('#EditGoodFrm').on('submit', function (e) {
            e.preventDefault();
            var formData = new FormData(this);
            $.ajax({
                url: "Goods/EditGood",
                type: $(this).attr('method'),
                data: $(this).serialize(),
                dataType: "json",
                success: function (response) {
                    if (response.data) {
                        $('#EditGoodModal').modal('hide');
                        $("#dtTable").DataTable().ajax.reload();
                        $('#EditGoodFrm').trigger("reset");
                        notification("@Html.Raw(L["success"])", "@Html.Raw(L["Good updated successfully"])", "success");
                    }
                    else {
                        notification("@Html.Raw(L["failed"])", "@Html.Raw(L["Good is Already Exist"])", "warning");
                    }
                },
                error: function (xhr, status, error) {
                    notification("@Html.Raw(L["error"])", "@Html.Raw(L["An Error Has beed Occured Pleas Try Again"])", "error");
                }
            });
        });

        function loadGood(id) {
            $.ajax({
                url: "/PhoneStore/Goods/GetGood",
                type: "Get",
                data: { id: id },
                dataType: "json",
                success: function (response) {
                    for (var propName in response.data) {
                        if (response.data.hasOwnProperty(propName)) {
                            var Prop = propName.replace(/^"(.*)"$/, '$1');
                            var Value = response.data[Prop];
                            var Capital = propName.charAt(0).toUpperCase() + propName.slice(1);
                               if(propName === "companyId"){
                                console.log(response.data)
                                shouldCallFunction = false;
                                   $('#EditGoodFrm #CompanyId').val(Value).trigger('change');
                                shouldCallFunction = true;
                               }
                            $('#EditGoodFrm input[id="' + Capital + '"]').val(Value);
                        }
                    }
                }
            });
        }
    </script>
}